{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/client/custom-types"],
    "baseUrl": ".",
    "paths": {
      "app/*": ["src/client/app/*"],
      "assets/*": ["src/client/assets/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["./src/client/**/*"],
  "exclude": ["node_modules"]
}
